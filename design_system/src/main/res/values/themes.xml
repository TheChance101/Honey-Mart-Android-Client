    <style name="Theme.HoneyMart" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <!-- Button Styles -->
    <style name="Theme.HoneyMart.Button">
        <item name="cornerRadius">@dimen/spacing_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_large</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_massive</item>
        <item name="backgroundColor">@color/primary_100</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">@dimen/text_body1</item>
    </style>

    <!-- Button Outline Style -->
    <style name="Theme.HoneyMart.Button.Outline">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/stroke_normal</item>
        <item name="strokeColor">@color/primary_100</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <!-- Button Icon Style -->
    <style name="Theme.HoneyMart.Button.Icon">
        <item name="icon">@drawable/icon_category</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
    </style>

    <!-- Button Text Style -->
    <style name="Theme.HoneyMart.Button.Text">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/stroke_normal</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <!-- Text Styles -->
    <style name="Theme.HoneyMart.Text">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <!-- Heading 1 -->
    <style name="Theme.HoneyMart.Text.H1">
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textSize">@dimen/text_heading</item>
    </style>

    <!-- Heading 2 -->
    <style name="Theme.HoneyMart.Text.H2">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <!-- Heading 3 -->
    <style name="Theme.HoneyMart.Text.H3">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">@dimen/text_body1</item>
    </style>

    <!-- Heading 4 -->
    <style name="Theme.HoneyMart.Text.H4">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">@dimen/text_body2</item>
    </style>

    <!-- Heading 5 -->
    <style name="Theme.HoneyMart.Text.H5">
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <!-- Heading 6 -->
    <style name="Theme.HoneyMart.Text.H6">
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <!-- Card Styles-->
    <style name="Theme.HoneyMart.Card">
        <item name="cardCornerRadius">@dimen/radius_small</item>
        <item name="strokeWidth">@dimen/stroke_zero</item>
    </style>

    <!-- Card Category Style-->
    <style name="Theme.HoneyMart.Card.CategoryCard">
        <item name="cardBackgroundColor">@color/white_100</item>
    </style>

    <!-- Text Category Style-->
    <style name="Theme.HoneyMart.Text.H5.CategoryTitle">
        <item name="android:textColor">@color/black_60</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Icon Category Style-->
    <style name="Theme.HoneyMart.CategoryIcon">
        <item name="srcCompat">@drawable/icon_category</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Image Style-->
    <style name="Theme.HoneyMart.Image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Market Image Style-->
    <style name="Theme.HoneyMart.Image.MarketImage">
        <item name="srcCompat">@drawable/image_test</item>
        <item name="android:foreground">@color/black_55</item>
    </style>

    <!-- Product Image Style-->
    <style name="Theme.HoneyMart.Image.ProductImage">
        <item name="srcCompat">@drawable/image_test</item>
        <item name="android:foreground">@color/black_8</item>
    </style>

    <!-- Market Text Style -->
    <style name="Theme.HoneyMart.Text.H2.TextMarket">
        <item name="android:textColor">@color/white</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.HoneyMart.Text.H6.TextCategory">
        <item name="android:textColor">@color/black_37</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Product Text Price -->
    <style name="Theme.HoneyMart.Text.H4.ProductPrice">
        <item name="android:background">@drawable/shape_price</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_large</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_semi_medium</item>
        <item name="android:drawableStart">@drawable/icon_price</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
    </style>

    <!-- Product Primary text-->
    <style name="Theme.HoneyMart.Text.H4.ProductPrimaryText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Product Secondary text-->
    <style name="Theme.HoneyMart.Text.H6.SecondaryText">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>