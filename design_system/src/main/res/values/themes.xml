<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Honey Mart App Theme   -->
    <style name="Theme.HoneyMart" parent="Theme.Material3.Light.NoActionBar">

        <!--Primary-->
        <item name="colorPrimary">@color/primary_100</item>
        <item name="colorOnPrimary">@color/white_300</item>

        <!--Secondary-->
        <item name="colorSecondary">@color/black_87</item>
        <item name="colorOnSecondary">@color/white_300</item>

        <!--Background-->
        <item name="android:colorBackground">@color/white_300</item>

    </style>

    <!-- Button Styles -->
    <style name="Theme.HoneyMart.Button">
        <item name="cornerRadius">@dimen/spacing_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/spacing_large</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/spacing_massive</item>
        <item name="backgroundColor">@color/primary_100</item>
        <item name="android:textColor">@color/white_50</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_body1</item>
    </style>

    <!-- Button Outline Style -->
    <style name="Theme.HoneyMart.Button.Outline">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/stroke_normal</item>
        <item name="strokeColor">@color/primary_100</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>

    <!-- Button Icon Style -->
    <style name="Theme.HoneyMart.Button.Icon">
        <item name="icon">@drawable/icon_category</item>
        <item name="drawableTint">@color/white_50</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
    </style>

    <!-- Button Text Style -->
    <style name="Theme.HoneyMart.Button.Text">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="strokeWidth">@dimen/stroke_normal</item>
        <item name="android:textColor">@color/primary_100</item>
    </style>


    <!-- Text Styles -->
    <style name="Theme.HoneyMart.Text">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <!-- Heading 1 -->
    <style name="Theme.HoneyMart.Text.H1">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/text_heading</item>
    </style>

    <!-- Heading 2 -->
    <style name="Theme.HoneyMart.Text.H2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <!-- Heading 3 -->
    <style name="Theme.HoneyMart.Text.H3">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_body1</item>
    </style>

    <!-- Heading 4 -->
    <style name="Theme.HoneyMart.Text.H4">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_body2</item>
    </style>

    <!-- Heading 5 -->
    <style name="Theme.HoneyMart.Text.H5">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_caption</item>
    </style>

    <!-- Heading 6 -->
    <style name="Theme.HoneyMart.Text.H6">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_secondary</item>
    </style>

    <!-- Card Styles-->
    <style name="Theme.HoneyMart.Card">
        <item name="cornerRadius">@dimen/radius_small</item>
        <item name="strokeWidth">@dimen/stroke_zero</item>
    </style>

    <!-- Card Category Style-->
    <style name="Theme.HoneyMart.Card.CategoryCard">
        <item name="cardBackgroundColor">@color/white_100</item>
    </style>

    <!-- Text Category Style-->
    <style name="Theme.HoneyMart.Text.H5.CategoryTitle">
        <item name="android:textColor">@color/black_60</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Icon Category Style-->
    <style name="Theme.HoneyMart.CategoryIcon">
        <item name="srcCompat">@drawable/icon_category</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>